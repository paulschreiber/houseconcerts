<div id="tabs">
<ul>
<%

tabList = {
	root_path => "House Concerts",
	about_path => "About",
	mailing_list_path => "Mailing List",
	past_shows_path => "Past Shows",
	musicians_path => "For Musicians",
}

current_url = request.path
if controller_name == "rsvps"
	current_url = new_rsvp_path
elsif controller_name == "mailing_list"
	current_url = mailing_list_path
end
%>

<% tabList.each_pair do |url, text| %>
	<% if current_url == url %>
		<li class='here'><%= text %></li>
	<% else %>
		<li><a href='<%= url %>'><%= text %></a></li>
	<% end %>
<% end %>

</ul>
</div>
